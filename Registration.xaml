<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Registration"
             Title="Registration">
    <VerticalStackLayout Spacing="30">


        <Entry 
             x:Name="txtName"
             Placeholder="Full Name"
             HorizontalOptions="FillAndExpand"
             Grid.Column="1"
              Grid.Row="0"
        />
        <Entry 
          x:Name="txtUsername"
          Placeholder="Username"
          HorizontalOptions="FillAndExpand"
          Grid.Column="1"
           Grid.Row="0"
        />

        <Entry 
         x:Name="txtPassword"
         Placeholder="Password"
         HorizontalOptions="FillAndExpand"
         Grid.Column="1"
           Grid.Row="1"
        IsPassword="True"
        />
        <Picker Title="Select your Gender"  >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </x:Array>
            </Picker.ItemsSource>

        </Picker>
        <Label x:Name="lblnumber" FontSize="Body" Text="Phone Number" VerticalOptions="Center" Margin="0"/>

        <Slider 
    Minimum="100000000"
    Maximum="999999999"
    x:Name="mySlider"
    ValueChanged="mySlider_ValueChanged" />
        <Stepper
            x:Name="myStepper"
            Minimum="100000000"
            Maximum="999999999"
            Increment="1"
            ValueChanged="myStepper_ValueChanged" />
    </VerticalStackLayout>
</ContentPage>